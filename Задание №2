public class Main {
    public static void main(String[] args) {
        checkSumSign(10,-11);
    }

    static void checkSumSign(int a, int b) {
        int sum = a + b;

        if (sum >= 0) {
            System.out.println("Cумма положительная");
        } else {
            System.out.println("Cумма отрицательная");
        }
    }
}
